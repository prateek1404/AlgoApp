extends layout

block body
  .navbar.navbar-default.navbar-fixed-top(role="navigation")
    .navbar-header
      a.navbar-brand(href="#{user.profileUrl}")  
        b #{user.displayName}!
    
  .container      
    div(ng-controller='AppCtrl')
      .jumbotron  
        h1 Welcome #{user.displayName}!
        br
        br
        p Select an Algorithm to check out its implementation in javascript! 
        ul
         li
          a(href="/insertionSort") InsertionSort
         li
          a(href="/recursiveInsertionSort") RecursiveInsertionSort
         li
          a(href="/bubbleSort") BubbleSort
         li
          a(href="/selectionSort") Selection Sort
         li 
          a(href="/heapSort") Heap Sort
         li
          a(href="/mergeSort") Merge Sort
      div(ng-view)
    hr  
    div(id="sortingFooter")
      | Sorting Algorithms app: v 1.0
      span(app-version)

  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/lib/jquery/jquery-2.0.3.min.js')
  script(src='bootstrap/js/bootstrap.min.js')
